{
  "autoLoadEntities": true,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@users/*": [
        "src/users/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}